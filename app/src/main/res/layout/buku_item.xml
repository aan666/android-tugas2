<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dm10">

    <TextView
        android:autoLink="web"
        android:id="@+id/tv_gambar"
        android:layout_width="@dimen/dm70"
        android:layout_height="@dimen/dm100"
        android:text="ini gambarsaasasasasasasasasas"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dm10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul bukunya"
                android:textStyle="bold"
                android:textSize="@dimen/dm15"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="@dimen/dm20"
                android:layout_height="@dimen/dm20"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/tv_jenis"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm5"
                android:text="Jenis"
                />

            <TextView
                android:id="@+id/tv_penerbit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="penerbit"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RatingBar
                android:isIndicator="true"
                android:id="@+id/rb_buku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>